{% extends "layout.njk" %}

{% block head %}
    <title>Private Lessons - Edit Student</title>
{% endblock %}

{% block content %}
    <form class="card" method="POST" action="/students?_method=PUT">
        <section 
            class="avatar"
            style="background: url(https://source.unsplash.com/collection/8360382/500x500) no-repeat center center / cover">
        </section>

        <section class="details">
            <h3>Edit student</h3>
            
            {% include 'students/fields.njk' %}

            <input type="hidden" name="id" value="{{student.id}}">
        </section>
    </form>
{% endblock %}