{% extends "layout.njk" %}

{% block head %}
    <title>Private Lessons - Teachers</title>
{% endblock %}

{% block content %}
    <div class="card table-teachers">
        <table width="100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Side dish</th>
                    <th>Action</th>
                </tr>
            </thead>
        
            <tbody>
                {% for teacher in teachers %}
                    <tr>
                        <td><span style="background-image: url({{teacher.avatar_url}})"></span>{{teacher.name}}</td>
                        <td>
                            {% for acting in teacher.acting %}
                                <span>{{acting}}</span>
                            {% endfor %}
                        </td>
                        <td><a href="/teachers/{{teacher.id}}">show</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

