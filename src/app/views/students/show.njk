{% extends "layout.njk" %}

{% block head %}
    <title>Private Lessons - Student</title>
{% endblock %}

{% block content %}
    <div class="card">
        <section 
            class="avatar"
            style="background: url({{student.avatar_url}}) no-repeat center center / cover">
        </section>

        <section class="details">
            <h3>Details</h3>
            
            <div class="item">
                <div>Full name</div>
                <div>{{student.name}}</div>
            </div>

            <div class="item">
                <div>Birthday</div>
                <div>{{student.birth}}</div>
            </div>

            <div class="item">
                <div>Email</div>
                <div>{{student.email}}</div>
            </div>

            <div class="item">
                <div>School year</div>
                <div>{{student.school_year}}</div>
            </div>

            <div class="item">
                <div>Weekly workload</div>
                
                <div>{{student.workload}} hr</div>
            </div>

            <div class="redirect">
                <a href="/students/{{student.id}}/edit" class="button">Edit</a>
                <form method="POST" action="/students?_method=DELETE" id="form-delete">
                    <input type="hidden" value="{{student.id}}" name="id">
                    <button type="submit" class="button-delete">Delete</button>
                </form>
            </div>

            {% include 'confirm.njk' %}
        </section>
    </div>
{% endblock %}

